{
  "name": "Encryptbook",
  "version": "1.0",
  "description": "Tool to encrypt your messages from Facebook and Hackers",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "identity",
    "identity.email",
    "http://*/*",
    "https://*/*",
    "https://www.google.com/*",
    "http://www.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_idle",
      "js": ["jsencrypt.min.js", "jquery.js", "contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
